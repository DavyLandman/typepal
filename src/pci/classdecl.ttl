test T1 [[class C { }]]
test T2 [[class C { int n = 3; }]]
test T3 [[class C { int n = true; }]] expect{"Declared type and initialization type should be equal"}
test T4 [[class C { int n = 3; int m = n;}]]
test T5 [[class C { int n = 3; 
                    int m = n;}
        ]]
test T6 [[class C { int n = m; 
                    int m = 3;}
        ]] expect { "Undefined `m`"}
                    
test T7 [[class C { int n = 3; 
                    void m(){ int x = n; }
                  }
        ]] 

test T8 [[class C { void m(){ int x = n; }
                  }
        ]] expect { "Undefined `n`"}
